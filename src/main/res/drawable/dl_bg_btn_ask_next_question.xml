<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <stroke
                android:width="3dp"
                android:color="@color/dlColorText" />
            <corners
                android:radius="20dp" />
            <gradient
                android:angle="90"
                android:startColor="@color/dlColorGray2"
                android:endColor="@color/dlColorGray1"
                />
            <padding
                android:left="2dp"
                android:top="5dp"
                android:right="2dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/dlColorTextDim" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

</selector>