<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <stroke
                android:color="@color/ddColorGray3"
                android:width="1dp"/>
            <solid
                android:color="@color/ddColorGray2" />
            <corners
                android:radius="@dimen/cornerRoundRadiusTiny"/>
        </shape>
    </item>

    <item android:state_window_focused="true" android:state_focused="true">
        <shape>
            <stroke
                android:color="@color/ddColorAccent"
                android:width="1dp"/>
            <corners
                android:radius="@dimen/cornerRoundRadiusTiny"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:color="@color/ddColorGray10"
                android:width="1dp"/>
            <corners
                android:radius="@dimen/cornerRoundRadiusTiny"/>
        </shape>
    </item>
</selector>