<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="*">

    <include layout="@layout/tr_block_info_tv_3x_tv_btn" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp">

        <Spinner
            android:id="@+id/spi"
            android:layout_span="2"
            style="@style/td_spinner__container_top"/>

        <RelativeLayout
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/tdBordered_topSection"
            android:background="?attr/borderInput"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_delete"
                app:tint="?attr/colorText" />
        </RelativeLayout>

    </TableRow>

    <include layout="@layout/toolbox_form_section_action_buttons" />
</TableLayout>