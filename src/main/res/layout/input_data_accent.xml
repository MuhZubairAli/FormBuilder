<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:background="?bgInputDataAccent"
    android:layout_margin="@dimen/spacePrimaryHalf">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_label"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColorHint="?colorText"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="?colorText"
            android:textColorHighlight="?colorText"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="?colorText"
        android:layout_marginStart="@dimen/spaceTiny"
        android:background="?colorAccentLight"/>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_marginStart="@dimen/spaceTiny"
        android:textColor="?colorText"
        android:background="?colorAccentLight"/>

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="?colorText"
        android:layout_marginStart="@dimen/spaceTiny"
        android:background="?colorAccentLight"/>

</LinearLayout>