<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- First Row (Paid and Consumed) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_header_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/tvInputLabel"
            android:textAlignment="center"
            android:background="?attr/colorBgQuestionSubgroupHeading"
            android:padding="@dimen/spacePrimaryHalf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/tvInputLabel"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/input_et" android:id="@+id/kbi_1" />

    </LinearLayout>


    <!-- Second Row (Unpaid and Consumed) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_header_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/tvInputLabel"
            android:textAlignment="center"
            android:background="?attr/colorBgQuestionSubgroupHeading"
            android:padding="@dimen/spacePrimaryHalf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/tvInputLabel"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/tvInputLabel"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/tvInputLabel"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/input_et" android:id="@+id/kbi_2" />
        <include layout="@layout/input_et" android:id="@+id/kbi_3" />
        <include layout="@layout/input_et" android:id="@+id/kbi_4" />

    </LinearLayout>

</LinearLayout>